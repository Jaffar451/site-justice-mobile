{
  "expo": {
    "name": "Justice Mobile Niger",
    "slug": "justice_mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/armoirie.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/armoirie.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ne.gouv.justice.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "L'application nécessite la caméra pour scanner les QR Codes des PV et joindre des preuves.",
        "NSPhotoLibraryUsageDescription": "L'application nécessite l'accès à la galerie pour importer des pièces jointes.",
        "NSMicrophoneUsageDescription": "L'application utilise le micro lors de l'enregistrement de preuves vidéo."
      }
    },
    "android": {
      "package": "ne.gouv.justice.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/armoirie.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "androidStatusBar": {
        "barStyle": "light-content",
        "backgroundColor": "#00000000",
        "translucent": true
      }
    },
    "web": {
      "favicon": "./assets/armoirie.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-sqlite",
      "expo-notifications",
      [
        "expo-camera",
        {
          "cameraPermission": "Autoriser Justice Mobile à utiliser la caméra pour scanner les documents et prendre des photos."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "53526335-9bd1-4eca-99b1-2466ff439569"
      }
    }
  }
}
